# Application
NODE_ENV=development
PORT=4005
SERVICE_NAME=user-service
API_PREFIX=/api/v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=user_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_LOGGING=true

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=user-service-group
KAFKA_CLIENT_ID=user-service

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-minimum-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4005/api/v1/auth/google/callback

# OAuth2 - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:4005/api/v1/auth/microsoft/callback

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Tenant Isolation
ENABLE_RLS=true

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Monitoring
PROMETHEUS_PORT=9091
